{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "lib/data.js", "actions/credits.js", "app/(main)/doctors/[specialty]/page.tsx", "app/(main)/onboarding/layout.tsx", "app/(main)/onboarding/page.tsx", "components/page-header.tsx", "app/(main)/layout.tsx", "app/(main)/pricing/page.tsx", "hooks/use-fetch.jsx", "app/(main)/admin/_components/pending-doctors.tsx", "app/(main)/admin/_components/verified-doctors.tsx", "app/(main)/admin/page.jsx", "app/(main)/doctor/_components/availability-settings.tsx", "app/(main)/doctor/_components/appointment-list.tsx", "components/appointment-card.tsx", "app/(main)/doctor/page.tsx"],
  "exclude": ["node_modules"]
}
